{
  "manifest_version": 3,
  "name": "Peek Pop",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.30",
  "default_locale": "en",
  "icons": {
    "48": "icon.png",
    "96": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "__MSG_popAction__"
    },
    "clickModeToggle": {
      "suggested_key": {
        "default": "Alt+U",
        "mac": "Alt+U"
      },
      "description": "__MSG_clickModeToggle__"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "action/action.html",
    "default_icon": {
      "48": "icon.png",
      "96": "icon.png",
      "128": "icon.png"
    }
  }
}
